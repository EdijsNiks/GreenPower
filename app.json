{
  "expo": {
    "name": "GreenPower",
    "slug": "GreenPower",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/buildLogo.png",
    "userInterfaceStyle": "light",
    "permissions": [
      "CAMERA",
      "MEDIA_LIBRARY"
    ],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "infoPlist": {
        "NSCameraUsageDescription": "This app requires camera access to scan QR codes."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/buildLogo.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.edijsniks.GreenPower"
    },
    "web": {
      "favicon": "./assets/buildLogo.png"
    },
    "extra": {
      "eas": {
        "projectId": "767c165e-def9-46e8-bd33-61eeb72ddcca"
      }
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "$(PRODUCT_NAME) needs access to your Camera."
        }
      ]
    ]
  }
}
